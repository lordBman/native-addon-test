{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node20",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}